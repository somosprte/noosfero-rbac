<%= block_title(block.title, block.subtitle) %>

<ul>
  <% block.social_networks.each do |network| %>
    <% next if block.send("#{network}_link").blank? %>
    <li><%= link_to(image_tag("plugins/social_block/images/#{network}.png"), block.send("#{network}_link"), target: '_blank' )  %></li>
  <% end %>
</ul>