<% labels = CommentClassificationPlugin::Label.enabled  %>
<% if logged_in? && user.has_permission?(:moderate_comments, profile) && !labels.empty? %>
        <%= labelled_form_field('', select_tag('comment_label_id', options_for_select(labels.map{|l|[l.name,l.id]}, @comment.label.nil? ? '' : @comment.label.id), :prompt => _('Label...')))  %>
<% end %>
