<% extend ActivityGalleryPlugin::Helper %>

<div class="form-title">Detalhes da Atividade</div>
<% if logged_in? %>
  <div class="activity-options">
      <%= link_to font_awesome(:ellipsis), '#!', class: 'menu-toggle', id: 'article-options' %>
      <ul class="noosfero-dropdown-menu" id="article-options-dropdown">
        <% activity_actions(@activities).each do |action| %>
          <%= content_tag(:li, action) unless action.blank? %>
        <% end %>
      </ul>
  </div>
<% end %>

<div class="activity-title"><%= @activities[:data][:attributes][:title]%></div>

<div class="thumbnail-item">
<%= image_tag("#{@activities[:data][:attributes][:images][:original]}", alt: "", class: "group list-group-image") %>
  <div class="caption">
    <p class="activity-text">
      <%= @activities[:data][:attributes][:caption]%>
    </p>
  </div>
</div>
<div class="about-actitivy">
  <!-- <div class="activity-title"><%= @activities[:data][:attributes][:title]%></div> -->
  <div class="activity-subtitle">Descrição</div>
  <p class="activity-text">
    <%= @activities[:data][:attributes][:description]%>
  </p>
  <div class="activity-subtitle">Autor(es)</div>
  <p class="activity-text">
      <ul>
          <% @activities[:data][:attributes][:authors].each do |author| %>
            <li><%= author[:name] %></li>
          <% end %>
        </ul>
  </p>
  <div class="activity-subtitle">Motivação</div>
  <p class="activity-text">
    <%= @activities[:data][:attributes][:motivation]%>
  </p>
  <div class="activity-subtitle">Poderosas Ideias</div>
  <p class="activity-text">
    <%= @activities[:data][:attributes][:"powerful-ideas"]%>
  </p>
  <div class="activity-subtitle">Produtos</div>
  <p class="activity-text">
    <%= @activities[:data][:attributes][:products]%>
  </p>
  <div class="activity-subtitle">Pré-Requisitos</div>
  <p class="activity-text">
    <%= @activities[:data][:attributes][:requirements]%>
  </p>
  <div class="activity-subtitle">Versão</div>
  <p class="activity-text">
    <%= @activities[:data][:attributes][:"version-history"]%>
  </p>
  <div class="activity-subtitle">Copyright</div>
  <p class="activity-text">
    <%= @activities[:data][:attributes][:copyright]%>
  </p>
  <div class="activity-subtitle">Licença</div>
  <p class="activity-text">
    <%= @activities[:data][:attributes][:"license-type"]%>
  </p>
  <div class="activity-subtitle">Organização do Espaço</div>
  <p class="activity-text">
    <%= @activities[:data][:attributes][:"space-organization"]%>
  </p>
  <div class="activity-subtitle">Passos para Implementação</div>
  <p class="activity-text">
    <%= @activities[:data][:attributes][:"implementation-steps"]%>
  </p>
  <div class="activity-subtitle">Dicas e anotações sobre implementação</div>
  <p class="activity-text">
    <%= @activities[:data][:attributes][:"implementation-tips"]%>
  </p>
  <div class="activity-subtitle">Avaliação do Aluno</div>
  <p class="activity-text">
    <%= @activities[:data][:attributes][:"reflection-assessment"]%>
  </p>
  <div class="activity-subtitle">Duração</div>
  <p class="activity-text">
    <%= @activities[:data][:attributes][:duration]%>
  </p>
  <div class="activity-subtitle">Atividade Publicada?</div>
  <p class="activity-text">
    <% if @activities[:data][:attributes][:published] == true %>
    Sim
    <% else %>
    Não
    <% end %>
  </p>
  <div class="activity-subtitle">Escopos</div>
  <p class="activity-text">
    <ul>
      <% @activities[:data][:attributes][:scopes].each do |scope| %>
        <li><%= scope[:title] %></li>
      <% end %>
    </ul>
  </p>
  <div class="activity-subtitle">Público Alvo</div>
  <p class="activity-text">
      <ul>
          <% @activities[:data][:attributes][:audiences].each do |audience| %>
            <li><%= audience[:name] %></li>
          <% end %>
        </ul>
  </p>
  <div class="activity-subtitle">Tipos de Espaço</div>
  <p class="activity-text">
      <ul>
          <% @activities[:data][:attributes][:"space-types"].each do |space_type| %>
            <li><%= space_type[:title] %></li>
          <% end %>
        </ul>
  </p>
  <div class="activity-subtitle">Materiais</div>
  <p class="activity-text">
    <!-- <%= @activities[:data][:attributes][:requirements]%> -->
  </p>

  <div class="activity-subtitle">Inspiração</div>
  <p class="activity-text">
    <%= @activities[:data][:attributes][:inspiration]%>
  </p>
  <div class="activity-subtitle">Referências</div>
  <p class="activity-text">
    <%= @activities[:data][:attributes][:references]%>
  </p>
</div>
