<%= form_tag({action: 'send_implementation'}, {id: "implemetantion-form" }) do %>
    <div class="form-title">Informações da Implementação</div>
    <%= hidden_field_tag('id', params[:id]) %>
    <div class="form-content">
        <%= labelled_form_field(_('Título'), text_field_tag('implementation[place_implementation]', nil, placeholder: 'Título da Implementação')) %>
        <%= labelled_form_field(_('Data da Implementação'), date_field('implementation[date_implementation]', nil, {:change_month => true, :change_year => true, :year_range => '-100:-0', :default_date => Date.today.strftime('%F'), :max_date => '+0d' }, {:id => 'implementation_date'})) %>
        <%= labelled_form_field(_('Quantidade de Participantes: Quantas pessoas participaram desta implementação da atividade?'), number_field_tag('implementation[number_participants]', 0)) %>
        <%= labelled_form_field(_('Descrição'), text_area_tag('implementation[description]', nil, placeholder: 'Em que contexto essa atividade foi implementada? O que foi diferente da atividade original? Você tem dicas e reflexões valiosas para compartilhar sobre esta experiência?')) %>
    </div>
    <%= button_bar do %>
        <%= submit_button(:save, _('Save'), :cancel => { :action => 'index' }) %>
    <% end %>
<% end %>