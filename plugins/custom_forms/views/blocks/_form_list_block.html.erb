<%= link_to _('View all'),
  { controller: 'custom_forms_plugin_profile',
    action: 'queries', kind: block.type },
  class: 'view-all' %>

<div class='form-list'>
  <% if forms.present? %>
    <% forms.each do |form| %>
      <%= render partial: "blocks/#{block.type}/list_item",
        locals: { form: form, block: block } %>
    <% end %>
  <% else %>
    <%= content_tag('i', _('No queries available'), style: 'margin: auto;') %>
  <% end %>
</div>
