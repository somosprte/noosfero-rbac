<div id="search-header">
  <ul id="assets-menu">
    <li class="search-show-people"><a href="/search/people" class="link-this-page">Pessoas</a></li>
    <li class="search-show-enterprises"><a href="/search/enterprises">Organizações</a></li>
  </ul>
</div>

<div id="search-subheader">
  <%= templates_submenu(@asset) %> 
  Escolha o tipo de perfil que deseja visualizar: <%= kinds_submenu(@asset) %>
  <%#= filters(@asset) if asset_class(@asset) == Enterprise %>
</div>
<div class="search-field">
  <div class="search-form">
    <span class="formfield">
      <%= search_input_with_suggestions('query', @asset, @query, {:id => 'search-input', :size => 50, :placeholder =>
      hint}) %>
    </span>

    <%= submit_button(:search, _('Search'), :id => 'search-button') %>
  </div>
  <%= filters(@asset) unless asset_class(@asset) == Enterprise %>
</div>

<%= render :partial => 'search_form_extra_fields' %>


<% if @empty_query %>
  <% hint = environment.search_hints[@asset] %>
  <% if hint and !hint.blank? %>
    <div class="search-hint"><%= hint %></div>
  <% end %>
<% end %>
