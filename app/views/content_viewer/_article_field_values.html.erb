<% if fields.present? %>
  <div id="article-field-values">
    <% fields.each do |name, field| %>
      <% if ((field['public'] == '1') || @profile.entitlement(current_person) >= Entitlement::Levels.levels[:related]) %>
        <div class='custom-field-value'>
          <%= render partial: "content_viewer/custom_fields/#{field['type']}",
                     locals: { field: field } %>
        </div>
      <% end %>
    <% end %>
  </div>
<% end %>
