<ul>
  <%if logged_in? %>
    <%if !user.favorite_enterprises.include?(profile) %>
      <li><%= link_to(font_awesome(:heart, _('Add as favorite')), { profile: user.identifier, controller: 'favorite_enterprises', action: 'add', id: profile.id }, title: _('Add enterprise as favorite')) %></li>
    <% end %>
  <% end %>
  <% if profile.enable_contact? %>
      <li><%= link_to(font_awesome(:email, _('Send an e-mail')), { profile: profile.identifier, controller: 'contact', action: 'new' }, { id: 'enterprise-contact-button' } ) %></li>
  <% end %>

  <%= render partial: 'blocks/profile_info_actions/common' %>
</ul>
