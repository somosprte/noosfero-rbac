<% if block.owner.is_a?(Profile) %>
    <%= render partial: 'blocks/footers/view_all', locals: {:owner => block.owner.identifier, :controller => 'profile', :action => 'enterprises', :block_elements => block.profile_list} %>
<% elsif block.owner.is_a?(Environment) %>
    <%= render partial: 'blocks/footers/view_all', locals: {:controller => 'search', :action => 'assets', :asset => 'enterprises', :kind => block.kind.try(:name), :block_elements => block.profile_list} %>
<% end %>
