<%= form_tag({:action => 'new', :profile => profile.identifier},
             :title => _('Create new folder'),
             :id => 'new-folder-dialog', :style => 'display: none;') do %>

  <%= select_profile_folder(
    _('Choose parent folder:'),
    :parent_id, profile, default_folder, {id: 'parent-id'}, {},
    "type='Folder' or type='Gallery'")
  %>

  <%= labelled_radio_button _('Gallery'), :folder_type, 'Gallery', true %>
  <%= labelled_radio_button _('Folder'), :folder_type, 'Folder', false %>

  <%= labelled_form_field _('Name:'), text_field_tag(:new_folder, nil,
        'data-url' => url_for({:action => 'new', :profile => profile.identifier})) %>
  <%= button_bar do %>
    <%= submit_button(:save, _('Create')) %>
  <% end %>
<% end %>
