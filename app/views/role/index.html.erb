<h1><%= _('Manage user roles') %></h1>

<table>
  <tr>
    <th><%= _('Role') %></th>
    <th><%= _('Actions') %></th>
  </tr>
  <% @roles.each do |role| %>
    <tr>
      <td>
        <%= link_to role.name, :action => 'show', :id => role %>
      </td>
      <td class='actions'>
        <%= button_without_text :edit, _('Edit'), :action => 'edit', :id => role %>
        <%= button_without_text(:trash, _('Remove'), {:action => 'destroy', :id => role}, {:method => :delete, data: {confirm: _('Are you sure you want to remove this role?')}}) %>
      </td>
    </tr>
  <% end %>
</table>

<%= button_bar do %>
  <%= button :add, _('Create a new role'), :action => 'new' %>
  <%= button :back, _('Back to admin panel'), :controller => 'admin_panel' %>
<% end %>
