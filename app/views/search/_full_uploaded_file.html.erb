<li class="search-uploaded-file-item article-item">
  <div class="search-content-first-column">
    <%= render :partial => 'image', :object => uploaded_file %>
  </div>

  <div class="noborder search-content-second-column">
    <h2>
      <%= link_to uploaded_file.filename, uploaded_file.view_url, :class => 'search-result-title' %>
    </h2>
    <%= render :partial => 'article_last_change', :object => uploaded_file %>

    <%= render :partial => 'article_author', :object => uploaded_file %>

    <% if uploaded_file.parent and uploaded_file.parent.published? %>
      <div class="search-uploaded-file-parent">
        <span class="search-field-label"><%= uploaded_file.parent.gallery? ? _("Gallery") : _("Folder") %>: </span>
        <span><%= link_to uploaded_file.parent.name, uploaded_file.parent.url %></span>
      </div>
    <% end %>

    <%= render(partial: 'article_categories', object: uploaded_file.categories) unless uploaded_file.categories.empty? %>
    <%= render(partial: 'article_tags', object: uploaded_file.tags) unless uploaded_file.tags.empty? %>
  </div>
</li>
